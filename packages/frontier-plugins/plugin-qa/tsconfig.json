{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "isolatedModules": true,
    "module": "commonjs",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*" ],
  "exclude": [
    "node_modules/**/*"
  ]
}
